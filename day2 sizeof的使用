#include <iostream>

using namespace std;


int main() 
{
	int num1 = 10;
	short num2 = 10;
	long num3 = 10;
	long long num4 = 10;
	cout << "int占用的内存空间为" << sizeof(num1) << endl;
	cout << "short占用的内存空间为" << sizeof(num2) << endl;
	cout << "long占用的内存空间为" << sizeof(num3) << endl;
	cout << "long long占用的内存空间为" << sizeof(num4) << endl;
	return 0;
 }
